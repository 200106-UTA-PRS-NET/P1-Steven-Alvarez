@model IEnumerable<PizzaBox.Web.Models.StoreViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>

                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WaitTime)
                    <a asp-action="Menu" asp-route-id="@item.Id">Go</a> |
                    <a asp-action="OrderHistory" asp-route-id="@item.Id">Order History</a>
                </td>
            </tr>
        }
    </tbody>
</table>